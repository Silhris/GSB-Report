{% extends "layout.html.twig" %}
{% set reportMenu = true %}

{% block title %}Rapports de visite{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% if reports %}
    <div class="table-responsive">
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Ville</th>
                    <th>Type de praticien</th>
                </tr>
            </thead>
            {% for report in reports %}
                <tr>
                    <td>{{ report.reportingDate }}</td>
                    <td>{{ report.practitionerId.name }} {{ report.practitionerId.firstName }}</td>
                    <td>{{ report.practitionerId.city }}</td>
                    <td>{{ report.purpose }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% else %}
    <div class="alert alert-warning">Aucun rapport trouvé.</div>
{% endif %}   
{% endblock %}