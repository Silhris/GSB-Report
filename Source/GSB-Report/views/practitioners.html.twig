{% extends "layout.html.twig" %}
{% set practitionerMenu = true %}

{% block title %}Praticiens{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% if practitioners %}
    <div class="table-responsive">
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Ville</th>
                    <th>Type de praticien</th>
                </tr>
            </thead>
            {% for practitioner in practitioners %}
                <tr>
                    <td>{{ practitioner.name }}</td>
                    <td>{{ practitioner.firstName }}</td>
                    <td>{{ practitioner.city }}</td>
                    <td>{{ practitioner.type.typeName }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% else %}
    <div class="alert alert-warning">Aucun pratitien trouvé.</div>
{% endif %}   
{% endblock %}