{% extends "layout.html.twig" %}
{% set practitionerMenu = true %}

{% block title %}{{ practitioner.name }}{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
<div class="well">
    <form class="form-horizontal" role="form">
        <div class="form-group">
            <label class="col-sm-3 control-label">Type de médecin</label>
            <div class="col-sm-9">
                <p class="form-control-static">{{ practitioner.type.name }}</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Nom légal</label>
            <div class="col-sm-9">
            <p class="form-control-static">{{ practitioner.firstName }}</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Prénom</label>
            <div class="col-sm-9">
                <p class="form-control-static">{{ practitioner.name }}</p>
            </div>
        </div>
    </form>
</div>
{% endblock %}